<h1>ユーザー詳細を表示するページです</h1>
<div class="users-show">
  <div class="conteiner">
    <div class="user show-item">
      <h2><%= @user.name %></h2>
      <p><%= @user.email %></p>

      <div class="user menus">
        <%= link_to("編集", "/users/#{@user.id}/edit") %>
        <%= link_to("削除", "/users/#{@user.id}/destroy",{method: "post"}) %>
      </div>
    </div>
  </div>
</div>
