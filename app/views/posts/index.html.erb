<h1>目標一覧を表示するページです</h1>

<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
    <div class="posts_table">
      <div class="posts_user_name">
        ユーザー名
      </div>
      <div class="posts-index-item">
        <%= link_to(post.content, "/posts/#{post.id}") %>
      </div>
    </div>
    <% end %>
  </div>
</div>
